<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rec_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place" />

    <TextView
        android:id="@+id/rec_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/decription"
        app:layout_constraintTop_toBottomOf="@id/rec_place" />

    <TextView
        android:id="@+id/rec_sightseeing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seightseeing"
        app:layout_constraintTop_toBottomOf="@id/rec_description" />

</android.support.constraint.ConstraintLayout>