<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp"

    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/iv_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="center"
            android:src="@drawable/project_imagefive" />

        <TextView
            android:id="@+id/tv_price_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/iv_recycler_view"
            app:layout_constraintEnd_toEndOf="@id/iv_recycler_view" />

        <TextView
            android:id="@+id/tv_place_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:textColor="#262626"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/iv_recycler_view" />

        <TextView
            android:id="@+id/tv_description_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="#939393"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_place_recycler_view" />

        <TextView
            android:id="@+id/tv_sightseeing_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_description_recycler_view"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cost: "
            android:paddingLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:id="@+id/charge_label"
            app:layout_constraintTop_toBottomOf="@id/tv_sightseeing_recycler_view"
            />

        <TextView
            android:id="@+id/tv_day_night_charges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/charge_label"
            app:layout_constraintTop_toBottomOf="@id/tv_sightseeing_recycler_view"

            />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>

