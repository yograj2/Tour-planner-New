<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="#FAFAFA"
    tools:context=".SiteInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <!--<TextView
                android:id="@+id/tv_day_night"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:background="@color/colorBlack"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@id/iv_image"
                app:layout_constraintEnd_toEndOf="@id/iv_image"

                />-->


            <TextView
                android:id="@+id/tv_place_recycler_view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:textColor="#262626"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/iv_image" />

            <TextView
                android:id="@+id/tv_description_recycler_view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_place_recycler_view_main" />

            <!--<android.support.design.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sightseeing"
                android:layout_marginStart="8dp"
                app:chipCornerRadius="8dp"
                android:id="@+id/chip_sightseeing"
                android:textColor="#262626"
                app:layout_constraintTop_toBottomOf="@id/tv_description_recycler_view_main"
                />-->


            <TextView
                android:id="@+id/tv_seightseeing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sightseeing:-"
                android:textColor="#262626"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_description_recycler_view_main"
                />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_siteSeeing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_seightseeing"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:layout_marginEnd="8dp">

            </android.support.v7.widget.RecyclerView>

            <android.support.design.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sight_seeing_chip_group"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_seightseeing">

            </android.support.design.chip.ChipGroup>

            <!--<TextView
                android:id="@+id/tv_sightseeing_recycler_view_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_seightseeing"
                android:layout_marginBottom="10dp"
                />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sight_seeing_chip_group"
                android:text="Rate this place"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:id="@+id/rate_place"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rate_place"
                android:layout_marginTop="4dp"
                android:text="Tell others what you think"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/rate_what_think"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rate_what_think"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rating_bar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rating_bar"
                android:text="submit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:id="@+id/rate_submit"
                />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/calculate"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF8C8C8C"
            android:textColor="#fdfcfc" />

        <TextView
            android:id="@+id/booknow"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#ffad33"
            android:background="#ffad33"
            android:text="BOOK NOW"
            android:textColor="#FF1A1919"

            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>

